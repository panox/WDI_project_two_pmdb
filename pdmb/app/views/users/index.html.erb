<div class="row index user-index">
  <div class="medium-8 medium-offset-2 columns">
    <ul class="medium-block-grid-2">
      <% @users.each do |user| %>
        <li>
          <div class="username">
            <%= user.username %>
          </div>
          <div>
            <%= link_to image_tag(user.picture), user%>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
