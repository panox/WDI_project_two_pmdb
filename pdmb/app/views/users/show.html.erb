<p>
  <%= @user.username %>
</p>

<p>
  <%= image_tag @user.picture %>
</p>

<h4>Reviews</h4>

<% @user.reviews.reverse_each do |review| %>
  <br >
  <%= review.title %> For <%= review.movie.name if review.movie %>
  <br >
  <%= review.content %>
  <br >
  <% if user_signed_in? && current_user.email == review.user.email %>
    <%= link_to 'Edit', edit_movie_review_path(review.movie.id, review) %>
    <%= link_to 'Destroy', movie_review_path(review.movie.id, review), method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
<% end %>