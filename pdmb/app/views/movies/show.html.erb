<%= @movie.name %>
(<%= @movie.year %>)
<%= @movie.country %>

<p>
  By <%= link_to @movie.director.name, @movie.director if @movie.director%>
</p>

<iframe width="560" height="315" src="https://www.youtube.com/embed/<%= @movie.trailer %>" frameborder="0" allowfullscreen></iframe>

<%= rating_for @movie, "overall", :disable_after_rate => false %>
<footer>
<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>
</footer>

<h4>Reviews</h4>

<% @movie.reviews.reverse_each do |review| %>
  <br >
  <%= review.title %> By <%= review.user.username %>
  <br >
  <%= review.content %>
  <br>
  <% if user_signed_in? && current_user.email == review.user.email %>
    <%= link_to 'Edit', edit_movie_review_path(@movie, review) %>
    <%= link_to 'Destroy', movie_review_path(@movie, review), method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
<% end %>

<h5><%= link_to 'New Review', new_movie_review_path(@movie) %></h5>
